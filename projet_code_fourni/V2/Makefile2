CC=gcc
CFLAGS=-Wall -Wpedantic -std=c11 -Wextra -g
RM=rm -f
DEPS= bloc.h inode.h sf.h
OBJ= bloc.o inode.o sf.o gerer_sf_v2.o
EXE=gerer_sf_v2

$(EXE): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(EXE)

gerer_sf_v2.o : gerer_sf_v2.c $(DEPS)
	$(CC) $(CFLAGS) -c gerer_sf_v2.c

bloc.o : bloc.c bloc.h
	$(CC) $(CFLAGS) -c bloc.c

inode.o : inode.c inode.h bloc.h
	$(CC) $(CFLAGS) -c inode.c

sf.o : sf.c sf.h inode.h bloc.h
	$(CC) $(CFLAGS) -c sf.c

.PHONY: clean

clean:
	$(RM) $(OBJ) $(EXE)

